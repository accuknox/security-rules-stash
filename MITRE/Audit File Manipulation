apiVersion: security.accuknox.com/v1
kind: KubeArmorPolicy
metadata:
  name: mitre-defense-evasion-file-manipulation
spec:
  message: "Auditing File Manipulation"
  selectorLabels:
    nodeSelector:
          hostname: xyz 
  syscall:
    matchPaths: 
    - path: /usr/bin
    matchName:
    - name: syscall
    - parameter: chown, chmod     
  action:
    Audit
  severity: 5
